<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/common_bg_dialog_upload"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <com.example.hzh.ui.widget.RWaveView
        android:id="@+id/progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:borderColor="@color/common_colorPrimary"
        app:textColorAbove="@color/common_colorPrimary"
        app:textColorBelow="@color/common_text_white"
        app:waveColor="@color/common_colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/common_uploading"
        android:textColor="@color/common_colorPrimary"
        android:textSize="16sp"/>

</LinearLayout>